<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.xmn.concert">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".view.SearchActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:theme="@style/Theme.AppCompat.Translucent" >
        </activity>
        <provider
            android:name=".view.content_provider.RecentSuggestionsProvider"
            android:authorities="ru.xmn.concert.view.content_provider.RecentSuggestionsProvider" />
        <provider android:name=".view.content_provider.CustomSuggestionsProvider"
            android:authorities="br.com.edsilfer.content_provider.CustomSuggestionsProvider" />
    </application>
</manifest>
