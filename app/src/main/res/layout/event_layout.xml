<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/material_drawer_padding"
    android:layout_marginRight="@dimen/material_drawer_padding"
    android:layout_marginTop="@dimen/material_drawer_padding"
    android:orientation="vertical"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:padding="16dp">


        <LinearLayout
            android:id="@+id/firstLA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dateAdapter"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="#000" />
            <TextView
                android:id="@+id/timeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeAdapter"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondLA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/thirdLA"
            android:layout_toStartOf="@+id/thirdLA"
            android:layout_toRightOf="@+id/firstLA"
            android:layout_toEndOf="@+id/firstLA"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">
            <TextView
                android:id="@+id/nameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nameAdapter"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="#000"
                android:layout_marginRight="60dp"
                android:layout_marginEnd="60dp" />
            <TextView
                android:id="@+id/bandsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bandsAdapter"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdLA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/priceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priceAdapter"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="#000"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>