<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:padding="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameAdapter"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="#000"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/imageButton1"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:src="@drawable/vkcom_24"
            android:layout_width="@dimen/buttonSize"
            android:layout_height="@dimen/buttonSize"
            android:id="@+id/imageButton1"
            android:background="?attr/selectableItemBackground"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/placeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeAdapter"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="#000"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/imageButton2"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:src="@drawable/ic_place_black_48dp"
            android:layout_width="@dimen/buttonSize"
            android:layout_height="@dimen/buttonSize"
            android:id="@+id/imageButton2"
            android:background="?attr/selectableItemBackground"

            android:layout_toLeftOf="@+id/imageButton4"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:src="@drawable/vkcom_24"
            android:layout_width="@dimen/buttonSize"
            android:layout_height="@dimen/buttonSize"
            android:id="@+id/imageButton4"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackground"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dateAdapter"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="#000"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/imageButton3"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:src="@drawable/calendar_plus"
            android:layout_width="@dimen/buttonSize"
            android:layout_height="@dimen/buttonSize"
            android:id="@+id/imageButton3"
            android:background="?attr/selectableItemBackground"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter" />

    </RelativeLayout>
    </LinearLayout>